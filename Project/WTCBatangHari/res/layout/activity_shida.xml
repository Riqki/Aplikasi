<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ede852"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShidaActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/shida" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="
                Shi-Da Original Taiwan Taste Ini adalah salah satu pasar yang terkenal malam di Taiwan. Seperti di Palembang, Shi-Da adalah tempat camilan fastfood menjual makanan ringan terkenal di Taiwan. Shi-Da Original Taiwan Taste Menyedikan Beragam menu favorit yang dihidangkan seperti Crispy Chicken, Cheese Melt Chicken, Grilled Crispy Chicken, dan beragam menu selingan Mushroom Fried side dish, Fried Sweet Potatoes, French Fries and beragam rasa minuman Bubble milk dan Bubble Tea. 
\n \n Paket Shida \n
 " />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/shida1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" \n \n Lokasi Shi-Da Original Taiwan Taste di WTC Batanghari Lantai Tiga
                " />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
